<!--  primary data -->
<div class="org-background" style="background-image:url({{background_image}});">
  <div class="container">
    {{#if logo}}
    <div class="logo-org">
      <img src="{{logo}}" alt="{{organization}}" class="landing-phrase" width="150px">
      {{/if}}
      {{#if is_owner}}
      <a href="{{update_url}}" class="btn btn-success">Edita esta pagina</a>
      {{/if}}
    </div>
  </div>
</div>
<!-- about -->
<div class="" style="background-color:{{primary_color}}; color:{{secondary_color}}; padding-bottom:10px;">
  <div class="container org-info">
    <h2 style="color:{{secondary_color}};">{{# if title}}
      {{title}}
    {{else}}
      {{organization}}
    {{/if}}</h2>
    <p>{{sub_title}}</p>
  </div>
  <div class="container org-rrss">
    <ul class="list-inline" style="padding-top:15px;">
    {{#if org_url}}
      <li><a href="{{org_url}}" target="_blank"><i class="fa fa-globe"></i> Website</a></li>
    {{/if}}
    {{#if facebook}}
      <li><a href="{{facebook}}" target="_blank"><i class="fa fa-facebook"></i> Facebook</a></li>
    {{/if}}
    {{#if twitter}}
      <li><a href="{{twitter}}" target="_blank"><i class="fa fa-twitter"></i> Twitter</a></li>
    {{/if}}
    {{#if instagram}}
      <li><a href="{{instagram}}" target="_blank"><i class="fa fa-instagram"></i> Instagram</a></li>
    {{/if}}
    {{#if rss_url}}
      <li><a href="{{rss_url}}" target="_blank"><i class="fa fa-rss"></i> RSS</a></li>
    {{/if}}
    </ul>
  </div>
</div>
<!--  extra pages -->
<div class="container" style="padding-top:10px; padding-bottom:10px;">
  <ul class="nav nav-tabs" role="tablist">
    {{#each extra_pages}}
    <li role="presentation" class="{{#if @first }}active{{/if}}"><a href="#{{slug}}" aria-controls="{{slug}}" role="tab" data-toggle="tab">{{title}}</a></li>
    {{/each}}
  </ul>
  <div class="tab-content">
    {{#each extra_pages}}
    <div role="tabpanel" class="tab-pane {{#if @first }}active{{/if}}" id="{{slug}}">{{{content}}}</div>
    {{/each}}
  </div>
</div>
<!--  propuestas -->
<div class="container">
{{#if proposals}}
  <h3 class="page-header">Propuestas</h3>
  <div class="row">
    {{#each proposals }}
      <div class="col-md-4">
        {{{card}}}
      </div>
    {{/each}}
  </div>
{{else}}
  {{#if is_owner}}
  <p>Comienza a generar tus propuestas en el siguiente <a href="{{create_proposal_url}}">enlace</a></p>
  {{/if}}
{{/if}}
</div>

<!--  propuestas apadrinadas -->
<div class="container">
{{#if sponsorships}}
  <h3 class="page-header">Propuestas apoyadas</h3>
  <div class="row">
    {{#each sponsorships }}
      <div class="col-md-4">
        {{{card}}}
      </div>
    {{/each}}
  </div>
{{/if}}
</div>
